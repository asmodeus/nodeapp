DROP TABLE IF EXISTS posts CASCADE;

CREATE TABLE posts (
    post_no integer PRIMARY KEY,
    resource text,
    category text, 
    title text,
    ingress text,
    text_content text,
    post_date timestamp with time zone DEFAULT date_trunc('second', now())
);


INSERT INTO posts (post_no, title, ingress, text_content, visual_content ) 
